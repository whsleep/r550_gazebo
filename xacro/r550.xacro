<?xml version="1.0"?>
<robot name="wheeltec_r550" xmlns:xacro="http://ros.org/wiki/xacro">

  <material name="yellow"><color rgba="0.8 0.8 0.0 1.0" /></material>
  <material name="black"><color rgba="0.15 0.15 0.15 1.0" /></material>
  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1.0" /></material>
  <material name="light_grey"><color rgba="0.75 0.75 0.75 1.0" /></material>


  <link name="base_footprint"></link>

  <joint name="base_link_joint" type="fixed">
    <origin xyz="0 0 0.05" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/base_link.STL"/>
        </geometry>
        <material name="light_grey" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/base_link.STL"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="2.5"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel_link"/>
        <origin xyz="0.0715 -0.09 -0.027" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Front Wheel Link -->
  <link name="right_front_wheel_link">
    <visual>
        <origin xyz="0 0 0" rpy="1.570 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="black" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="1.570 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>


  <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel_link"/>
        <origin xyz="0.072 0.09 -0.027" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Front Wheel Link -->
  <link name="left_front_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.570 -1.570 "/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 -1.570 -1.570 "/>
      <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>


 <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel_link"/>
        <origin xyz="-0.1 -0.09 -0.027" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Rear Wheel Link -->
  <link name="right_rear_wheel_link">
    <visual>
        <origin xyz="0 0 0" rpy="1.570 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="black" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="1.570 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_rear_wheel_link"/>
        <origin xyz="-0.1 0.09 -0.027" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
  </joint>


  <!-- Left Rear Wheel Link -->
  <link name="left_rear_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.570 -1.570"/>
      <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
      <material name="black" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 -1.570 -1.570"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/roue_Mecanum.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <joint name="c70_joint" type="fixed">
        <parent link="base_link"/>
        <child link="c70_link"/>
        <origin xyz="0.13 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- C70 Camera Link -->
  <link name="c70_link">
    <inertial>
        <mass value="0.05"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/camera_link.STL"/>
        </geometry>
        <material name="dark_grey" />
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/camera_link.STL"/>
        </geometry>
    </collision>
  </link>

  <joint name="rplidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="rplidar_link"/>
        <origin xyz="-0.06 -0.01 0.15" rpy="0 0 4.712385"/>
  </joint>

  <!-- RPLIDAR Link -->
  <link name="rplidar_link">
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 4.712385"/>
            <geometry>
                <mesh filename="package://r550_gazebo/meshes/mini_4wd/rplidar_link.STL"/>
            </geometry>
            <material name="black" />
        </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 4.712385"/>
        <geometry>
            <mesh filename="package://r550_gazebo/meshes/mini_4wd/rplidar_link.STL"/>
        </geometry>
    </collision>
  </link>


   <!-- imu -->
    <joint name="imutobase" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="imu"/>
    </joint>
        
    <link name="imu">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                    <box size="0 0 0"/>
            </geometry>                
            <material name= "red" >
              <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0 0 0" />
            </geometry>
            <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0" />
        </collision>
    </link>


  <xacro:include filename="$(find r550_gazebo)/xacro/r550.gazebo" />
</robot>